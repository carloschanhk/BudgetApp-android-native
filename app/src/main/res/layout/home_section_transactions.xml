<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.budget.ui.home.HomeViewModel" />

        <variable
            name="categoryTypes"
            type="java.util.List&lt;com.example.budget.common.CategoryType&gt;" />

        <variable
            name="context"
            type="android.content.Context" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_box_background_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:orientation="horizontal"
            android:paddingVertical="30dp">

            <TextView
                android:id="@+id/tv_title_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="Expenses"
                android:textSize="18sp"
                tools:text="Expenses" />

            <TextView
                android:id="@+id/tv_title_incomes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Incomes"
                android:textSize="18sp"
                tools:text="Incomes" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_baseline_sort_24" />

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                android:orientation="vertical">

                <include
                    layout="@layout/home_item_transaction"
                    app:categoryType="@{categoryTypes[0]}"
                    app:context="@{context}"
                    app:monthBudget="@{viewModel.monthBudget}"
                    app:transactions="@{viewModel.apparelsExpenses}" />

                <include
                    layout="@layout/home_item_transaction"
                    app:categoryType="@{categoryTypes[1]}"
                    app:context="@{context}"
                    app:monthBudget="@{viewModel.monthBudget}"
                    app:transactions="@{viewModel.foodExpenses}" />

                <include
                    layout="@layout/home_item_transaction"
                    app:categoryType="@{categoryTypes[2]}"
                    app:context="@{context}"
                    app:monthBudget="@{viewModel.monthBudget}"
                    app:transactions="@{viewModel.shoppingExpenses}" />

                <include
                    layout="@layout/home_item_transaction"
                    app:categoryType="@{categoryTypes[3]}"
                    app:context="@{context}"
                    app:monthBudget="@{viewModel.monthBudget}"
                    app:transactions="@{viewModel.transitExpenses}" />

                <include
                    layout="@layout/home_item_transaction"
                    app:categoryType="@{categoryTypes[4]}"
                    app:context="@{context}"
                    app:monthBudget="@{viewModel.monthBudget}"
                    app:transactions="@{viewModel.leisureExpenses}" />

                <include
                    layout="@layout/home_item_transaction"
                    app:categoryType="@{categoryTypes[5]}"
                    app:context="@{context}"
                    app:monthBudget="@{viewModel.monthBudget}"
                    app:transactions="@{viewModel.healthExpenses}" />

                <include
                    layout="@layout/home_item_transaction"
                    app:categoryType="@{categoryTypes[6]}"
                    app:context="@{context}"
                    app:monthBudget="@{viewModel.monthBudget}"
                    app:transactions="@{viewModel.housingExpenses}" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>